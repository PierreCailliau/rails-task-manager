<h1>All Tasks</h1>
<button> <%=  link_to "Add a new task", new_path %></button>
<ul style="list-style-type:none">
  <% @tasks.each do |task| %>
  <li>
  <%= link_to task.title, task_path(task.id) %>
  <% if task.completed %>
    <i class="fa-solid fa-check"></i>
    <% else %>
    <i class="fa-solid fa-x"></i>
  <% end %>
  </li>
  <% end %>
</ul>
