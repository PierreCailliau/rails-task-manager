<h1><%= @task.title %></h1>
<h3><%= @task.completed ? "Done" : "Pending"%></h3>
<p> <%= @task.details %></p>

<button> <%= link_to "Edit task", edit_path %></button>
<button>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</button>

<button> <%= link_to "go to all tasks",tasks_path %></button>
